<%= simple_form_for [@cocktail, @dose] do |f| %>
<div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, input_html: { multiple: false, class: "select2" }, include_hidden: false %>
</div>
<div class="form-actions btn btn-success w-100">
    <%= f.button :submit %>
</div>
<% end %>
